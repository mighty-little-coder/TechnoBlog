<!-- Single post card -->
<div class="card mx-auto" id="post-card" style="width: 75rem;">
  <div class="card-body">
    <div class="row">
      <h2>{{post.post_title}}</h2>
      <p>{{post.post_body}}</p>
      <p class="card-subtitle mb-2 text-body-secondary">Posted by: {{post.user.name}}</p>
      <p class="card-subtitle mb-2 text-body-secondary">{{format_date post.date_created}}</p>
    </div>
  </div>
</div>

<!-- Comments list -->
{{#each post.comments as |comment| }}
  <div class="card mx-auto mt-3" id="comment-card" style="width: 75rem;">
    <div class="card-body">
      <p>{{comment.comment}}</p>
      <p class="card-subtitle mb-2 text-body-secondary">Posted by: {{comment.user.name}}</p>
      <p class="card-subtitle mb-2 text-body-secondary">{{comment.date_created format_date}}</p>
    </div>
  </div>
{{/each}}

<!-- New comment card -->
<div class="card mx-auto mt-3" id="add-comment-card" style="width: 75rem;">
  <div class="card-body">
    <form>
      <div class="mb-3">
        <input type="text" class="form-control" id="comment">
        <button type="submit" class="btn btn-dark mt-3" id="add-comment">Add Comment</button>
      </div>
    </form>
  </div>
</div>
