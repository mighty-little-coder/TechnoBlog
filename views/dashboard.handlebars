<div class="container">
  <div class="row">

{{!-- Displays single user's posts and allows them to create, edit, and delete posts. --}}
    <div class="col-md-7">
      <h1 id="post-h1">Your Posts</h1>

      {{#each userPosts as |userPost|}}
      <div class="card mx-auto mt-3" id="dash-post-card">
        <div class="card-body">

          <h2><a href="/view-post/{{userPost.id}}" class="link-light" id="post-title-{{userPost.id}}">{{userPost.post_title}}</a></h2>

          <p id="post-body-{{userPost.id}}">{{userPost.post_body}}</p>

          <p class="card-subtitle mb-2 text-body-secondary">
            {{format_date userPost.date_created}}
            <button class="btn btn-danger float-end ms-2" onclick="deletePost({{userPost.id}})">Delete</button>
            <button class="btn btn-dark float-end ms-2" id="edit-post" onclick="editPost({{userPost.id}})">Edit</button>
          </p>
          
          <button class="btn btn-success save-changes" data-post-id="{{userPost.id}}" style="display: none;" onclick="saveChanges({{userPost.id}})">Save Changes</button>
        </div>
      </div>
      {{/each}}
    </div>

{{!-- Allows user to create a new post. --}}
    <div class="col-md-5">
      <form>
        <div class="mb-3">
          <h2 id="post-h2">Create Blog Post</h2>
          
          <label for="post-title" class="form-label">Post title</label>
          <input type="text" class="form-control" id="post_title">

          <label for="new-post" class="form-label">Input body of post</label>
          <textarea type="text" class="form-control" rows="5" id="post_body"></textarea>
        </div>
        
        <button type="submit" class="btn btn-dark" id="create-post">Submit Post</button>
      </form>
    </div>
  </div>
</div>
