<!-- Iterate over each post and display a card for each -->
{{#each posts as |post| }}
  <div class="card mx-auto mt-3" id="home-card" style="max-width: 75rem;">
    <div class="card-body">
      <div class="row">
        <!-- Post title is a link to view the full post -->
        <a href="/view-post/{{post.id}}" class="link-light">
          <h2>{{post.title}}</h2>
        </a>
        <!-- Post content -->
        <p class="w-100">{{post.content}}</p>
        <!-- Subtitle showing the author of the post -->
        <p class="card-subtitle mb-2 text-body-secondary">Posted by: {{post.user.name}}</p>
        <!-- Subtitle showing the formatted post creation date -->
        <p class="card-subtitle mb-2 text-body-secondary">{{format_date post.date_created}}</p>
      </div>
    </div>
  </div>
{{/each}}
