<div class="row">
  
  <!-- Login form -->
  <div class="col-md-6">
    <h2>Login</h2>
    <form class="login-form">
      <!-- Email input field -->
      <div class="mb-3 form-group">
        <label for="email-login" class="form-label">Email:</label>
        <input class="form-input form-control" type="email" id="email-login"/>
      </div>
      <!-- Password input field -->
      <div class="mb-3 form-group">
        <label for="password-login" class="form-label">Password:</label>
        <input class="form-input form-control" type="password" id="password-login" />
      </div>
      <!-- Form submission button for login -->
      <div class="form-group">
        <button class="btn btn-dark" type="submit">Login</button>
      </div>
    </form>
  </div>

  <!-- Sign-up form -->
  <div class="col-md-6">
    <h2>Sign Up</h2>
    <form class="form signup-form">
      <!-- Name input field -->
      <div class="mb-3 form-group">
        <label for="name-signup" class="form-label">Name:</label>
        <input class="form-input form-control" type="text" id="name-signup" />
      </div>
      <!-- Email input field -->
      <div class="mb-3 form-group">
        <label for="email-signup" class="form-label">Email:</label>
        <input class="form-input form-control" type="text" id="email-signup" />
      </div>
      <!-- Password input field -->
      <div class="mb-3 form-group">
        <label for="password-signup" class="form-label">Password:</label>
        <input class="form-input form-control" type="password" id="password-signup" />
      </div>
      <!-- Form submission button for sign-up -->
      <div class="form-group">
        <button class="btn btn-dark" type="submit">Sign Up</button>
      </div>
    </form>
  </div>
</div>

<!-- Script inclusion for client-side functionality -->
<script src="./js/login.js"></script>
